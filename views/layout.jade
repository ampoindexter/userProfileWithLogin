doctype html
html(lang='en')
  head
    title= title
    link(href='/public/vendor/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/public/vendor/sweetalert/dist/sweetalert.css', rel='stylesheet')
    block css
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#nav-collapse', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')= title
        #nav-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/register')#registerLink Register
            li
              a(href='/login')#loginLink Login
            li
              a(href='/logout')#logoutLink Logout

    block content
    script(src='/public/vendor/jquery/dist/jquery.min.js')
    script(src='/public/vendor/bootstrap/dist/js/bootstrap.min.js')
    script(src='/public/vendor/sweetalert/dist/sweetalert.min.js')
    script(src='/public/js/main.js')
    block js
